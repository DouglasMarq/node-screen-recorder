{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "ES2020"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}